<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="15dp">

        <ImageView
            android:id="@+id/imgv_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/location_black"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">
        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_bold"
                android:text="Forward School"
                />

            <TextView
                android:id="@+id/history_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/inter_bold"
                android:text="April 1st, 2022 ~ 9:00AM"
                android:textColor="#CACACA"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/history_interaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8D8D8D"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:layout_marginStart="10dp"
                android:text="10 Interactions" />

        </LinearLayout>

        <ImageView
            android:id="@+id/danger"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/red"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>